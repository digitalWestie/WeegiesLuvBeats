    <% for artist in @artists %>
      <%= image_tag artist.image('large') %>
    <% end %>
  
    <%= link_to 'Begin', lastfm_token_path, :class => 'btn btn-primary btn-large', :style => "font-size: 1.7em; padding: 20px; margin: 12px;"  %>
    
  </div>

  <div class = "span4">

    <%= image_tag 'rab.jpg' %>
  
    <p>750 Artists</p>
    <p>3500 Tracks</p>
    <p>10,000 > Last.fm tags</p>
    
  </div>

</div>


